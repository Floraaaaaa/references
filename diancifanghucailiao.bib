  year          = {2009},
  volume        = {17},
  number        = {7},
  pages         = {5571--5579},
  month         = mar,
  __markedentry = {[junhu:6]},
  abstract      = {In this letter, the problem of extraordinary (ET) transmission of electromagnetic waves through opaque screens perforated with subwavelength holes is addressed from an analytical point of view. Our purpose was to find a closed-form expression for the transmission coefficient in a simple case in order to explore and clarify, as much as possible, the physical background of the phenomenon. The solution of this canonical example, apart from matching quite well with numerical simulations given by commercial solvers, has provided new insight in extraordinary transmission as well as Wood's anomaly. Thus, our analysis has revealed that one of the key factors behind ET is the continuous increase of excess electric energy around the holes as the frequency approaches the onset of some of the higher-order modes associated with the periodicity of the screen. The same analysis also helps to clarify the role of surface modes -or spoof plasmons- in the onset of ET. (C) 2009 Optical Society of America},
  doi           = {10.1364/OE.17.005571},
  oi            = {Jelinek, Lukas/0000-0002-1163-9059; Mesa, Francisco/0000-0001-8943-9068;EOLEOLMedina, Francisco/0000-0002-9947-506X; Marques Sillero,EOLEOLRicardo/0000-0003-0528-384X},
  pm            = {19333324},
  ri            = {Jelinek, Lukas/E-8338-2014; Mesa, Francisco/E-9499-2010; Medina, Francisco/A-8220-2010; Marques Sillero, Ricardo/},
  sn            = {1094-4087},
  ut            = {WOS:000264747500074},
}

@Article{Medina2010p105--115,
  author        = {Medina, Francisco and Mesa, Francisco and Skigin, Diana C.},
